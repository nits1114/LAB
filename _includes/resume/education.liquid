<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign education = data[1] %}
  {% for content in education %}
    <li class="list-group-item">
      <div class="row">

        <div class="col-xs-2 col-sm-2 col-md-2 text-center date-column">
          {% if content.startDate %}
            {% assign date = content.startDate %}
            {% if content.endDate %}
              {% assign date = date | append: " - " | append: content.endDate %}
            {% else %}
              {% assign date = date | append: " - Present" %}
            {% endif %}
          {% elsif content.endDate %}
            {% assign date = content.endDate %}
          {% else %}
            {% assign date = null %}
          {% endif %}

          {% if date %}
          <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
            {{ date }}
          </span>
          {% endif %}
        </div>

        <div class="col-xs-10 col-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            {% if content.url %}
              <a href="{{ content.url }}">{{ content.studyType }}</a>
            {% else %}
              {{ content.studyType }}
            {% endif %}
          </h6>

          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">
            {{ content.institution }}
          </h6>

          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">
            {{ content.area }}
          </h6>
        </div>

      </div>
    </li>
  {% endfor %}
</ul>
